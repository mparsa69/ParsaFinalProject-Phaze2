@using App.Domain.Core.BaseService.Dtos
@model List<MainCategoryDto>
 <a class="btn btn-primary" asp-controller="MainCategory" asp-action="Create">
                        ایجاد گروه اصلی جدید 
</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">شناسه</th>
            <th scope="col">نام</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.Id</th>
                <td>@item.Title</td>
                <td> 
                    <a class="btn btn-primary" asp-controller="MainCategory" asp-action="Update" asp-route-id=@item.Id>
                        ویرایش 
                    </a>
                </td>
                <td>
                    <form method="post" asp-action="DeleteMainCategory" asp-route-id="@item.Id">
                        <input value="حذف" type="submit" class="btn btn-danger" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>