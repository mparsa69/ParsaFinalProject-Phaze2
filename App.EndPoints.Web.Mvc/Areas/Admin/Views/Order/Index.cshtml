<div style="margin-top:1%; margin-bottom:1%;">
    <div class="row">

        <table class="table table-striped">
            <td><h3 style="float:right;">لیست سفارشات</h3></td>
            <form asp-action="Index" formmethod="post">
            <td><input class="form-control" name="name" placeholder="نام کاربری مورد نظر را وارد کنید"></td>
            <td><button type="submit" class="btn btn-primary">جستجو</button></td>
            </form>
            <form asp-action="Index" formmethod="post">
            <td><button type="submit" class="btn btn-primary">مشاهده همه</button></td>
            </form>
        </table>   
    </div>
</div>


<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">شناسه</th>
            @*<th scope="col">شناسه مشتری</th>*@
            <th scope="col">نام کاربری مشتری </th>
            <th scope="col">عنوان</th>
            <th scope="col">وضعیت سفارش</th>
            <th scope="col">متخصص</th>
            @*<th scope="col">سرویس</th>*@
            <th scope="col">سرویس</th>
            <th scope="col">قیمت پایه</th>
            <th scope="col"> وضعیت نمایش</th>
            @*<th scope="col">قیمت پیشنهادی متخصص</th>*@
            @*<th scope="col"></th>*@
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                @*<td>@item.CustomerId</td>*@
                <td>@item.CustomerName</td>
                <td>@item.Title</td>
                <td>@item.Status</td>
                <td>@item.ExpertId</td>
                @*<td>@item.ThirdCategoryId</td>*@
                <td>@item.ThirdCategoryName</td>
                <td>@item.BasePrice</td>
                <td>@item.IsShow</td>
                @*<td>@item.suggestedPrice</td>*@ 
                @*<td>
                    <a class="btn btn-primary"  asp-controller="Order" asp-action="Update" asp-route-id=@item.Id>
                        ویرایش 
                    </a>
                </td>*@
                <td>
                    <a class="btn btn-primary"  asp-controller="Suggestion" asp-action="OrderSuggestions" asp-route-orderId=@item.Id>
                        پیشنهادات 
                    </a>
                </td>
                <td>
                    <form method="post" asp-controller="Order"  asp-action="Delete" asp-route-id="@item.Id">
                        <input value="حذف" type="submit" class="btn btn-danger" />  
                    </form>
                </td>
                <td>
                    <a class="btn btn-primary"  asp-controller="Comment" asp-action="OrderComments" asp-route-orderId=@item.Id>
                        کامنت
                    </a>
                </td>
                <td>
                    <form method="post" asp-controller="Order"  asp-action="DisableShow" asp-route-id="@item.Id">
                        <input value="عدم نمایش" type="submit" class="btn btn-danger" />  
                    </form>
                </td>
                <td>

                    <form method="post" asp-controller="Order"  asp-action="EnableShow" asp-route-id="@item.Id">
                        <input value=" نمایش" type="submit" class="btn btn-danger" />  
                    </form>
                </td>
            </tr>
            
        }
    </tbody>
</table>